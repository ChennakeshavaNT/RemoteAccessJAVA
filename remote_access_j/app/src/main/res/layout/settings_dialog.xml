<?xml version="1.0" encoding="utf-8"?>
<!--
Edit Remote Access Menu which is displayed after clicking on the Edit remote access button in the main_activity.xml layout
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/seetings_icon_svg"
        android:layout_gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/edit_access_key_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:backgroundTint="@color/green"
        android:padding="15dp"
        android:text="Edit Access Key"
        android:textSize="15sp"
        android:visibility="visible"
        app:cornerRadius="10dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/disable_ra_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:letterSpacing="0.1"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:textColor="@color/green"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        android:padding="15dp"
        android:text="Disable Remote Access"
        android:textSize="15sp"
        android:visibility="visible"
        app:cornerRadius="10dp" />
</LinearLayout>